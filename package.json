{
  "name": "fs-ndjson",
  "version": "1.1.0",
  "description": "read and write NDJSON files (Newline Delimited JSON)",
  "author": {
    "name": "Buster Collings",
    "email": "busterc@gmail.com",
    "url": "https://about.me/buster"
  },
  "files": ["lib"],
  "main": "lib/index.js",
  "keywords": ["ndjson", "ldjson", "nd-json", "ld-json", "jsonl"],
  "devDependencies": {
    "coveralls": "^3.0.2",
    "deep-diff": "^1.0.2",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-xo": "^0.24.2",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "jest-cli": "^23.5.0",
    "lint-staged": "^7.2.2",
    "nsp": "^3.2.1",
    "prettier": "^1.7.0",
    "universalify": "^0.1.1"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "busterc/fs-ndjson",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "ISC",
  "dependencies": {
    "make-dir": "^1.1.0",
    "universalify": "^0.1.1"
  }
}
